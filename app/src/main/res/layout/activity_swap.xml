<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/toppart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/student_id"
        android:layout_width="384dp"
        android:layout_height="313dp"
        app:srcCompat="@drawable/camera" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/midpart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@id/toppart">

        <Button
            android:id="@+id/bt_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classify"
            app:layout_constraintBottom_toBottomOf="@id/student_id" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/midpart">

    <TextView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/resultText"
        android:hint="Result prints here"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>